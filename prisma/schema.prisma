generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
//Matheus
model Usuario{
  id String @id @default(uuid())
  email String @unique
  username String
  password String
  id_client      String
  cliente        Cliente      @relation(fields: [id_client], references: [id])
  treino Treino[]
  @@map("usuario") 
}

model Equipamento{
  id_equipamento String @id @default(uuid())
  nome_equipamento String
  id_client      String
  cliente         Cliente      @relation(fields: [id_client], references: [id])
  @@map("equipamento")
}




//Crislan
model Treino{
  id              String @id @default(uuid())
  dia             Int @unique
  id_usuario      String
  usuario         Usuario      @relation(fields: [id_usuario], references: [id])
  // nome            String
  // usuario         Usuario @relation(fields: [nome], references: [username])
  series          Int
  repeticoes      Int
  equipamento     String
  treino          String


  @@map("treino") 
}






//Leone

model Cliente{
  id String @id @default(uuid())
  nome String 
  email String @unique
  cnpj String @unique
  senha String 
  equipamentos Equipamento[]
  usuario Usuario[]
}




