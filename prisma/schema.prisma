generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
//Matheus
model Usuario{
  id String @id @default(uuid())
  email String @unique
  nome String @unique
  senha String
  id_client      String
  cliente        Cliente      @relation(fields: [id_client], references: [id])
  treino Treino[]
  medidas Medidas[]
  @@map("usuario") 
}
model Equipamento{
  id_equipamento String @id @default(uuid())
  nome_equipamento String @unique
  id_client      String
  cliente         Cliente      @relation(fields: [id_client], references: [id])
  treino Treino[]
  @@map("equipamento")
}
//Crislan
model Treino{
  id              String @id @default(uuid())
  dia             Int @unique
  nome_equipamento  String
  equipamento     Equipamento @relation(fields: [nome_equipamento], references: [nome_equipamento])
  series          Int
  repeticoes      Int
  treino          String
  nome_usuario      String @unique
  usuario         Usuario @relation(fields: [nome_usuario], references: [nome])
  id_client      String
  cliente         Cliente @relation(fields: [id_client], references: [id])
  @@map("treino")
}
//Leone
model Cliente{
  id String @id @default(uuid())
  nome String 
  email String @unique
  cnpj String @unique
  senha String 
  equipamentos Equipamento[]
  usuario Usuario[]
  treino Treino[]

  @@map("cliente")
}
model Medidas{
  id              String @id @default(uuid())
  torax           Decimal
  busto           Decimal
  cintura         Decimal
  quadril         Decimal
  peso            Decimal
  altura          Decimal
  p_gordura       String
  nome_usuario    String
  usuario         Usuario @relation(fields: [nome_usuario], references: [nome])

  @@map("medidas")
}



